<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBase.Views.ProductItemPage">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="StartAndExpand" >
                <Label Text="Nombre" />
                <Entry Text="{Binding Name}" />
                <Label Text="Descripcion" />
                <Entry Text="{Binding Description}" />
                <Label Text="Precio" />
                <Entry Text="{Binding Price}" />
                <Label Text="Done" />
                <Switch IsToggled="{Binding Done}" />
                <Button Text="Guardar" Clicked="OnSaveClicked" />
                <Button Text="Eliminar" Clicked="OnDeleteClicked" />
                <Button Text="Cancelar" Clicked="OnCancelClicked" />
                <Button Text="Hablar" Clicked="OnSpeakClicked" />
            </StackLayout>
        </ContentPage.Content>
</ContentPage>